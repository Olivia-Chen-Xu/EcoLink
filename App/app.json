{
    "expo": {
        "name": "GoogleLocation",
        "slug": "GoogleLocation",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "GoogleLocation",
            "config": {
                "googleMapsApiKey": ""
            },
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "This app requires geolocation.",
                "NSPhotoLibraryUsageDescription": "This app requires photo permission.",
                "NSCameraUsageDescription": "This app requires camera permission.",
                "NSPhotoLibraryAddUsageDescription": "This app would like to save photos to your photo gallery"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#FFFFFF"
            }
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with your friends."
                }
            ]
        ]
    }
}
